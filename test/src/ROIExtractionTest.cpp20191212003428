extern "C"
{
 
  void ROIExtractionTestInit(RTC::Manager* manager)
  {
    coil::Properties profile(roiextraction_spec);
    manager->registerFactory(profile,
                             RTC::Create<ROIExtractionTest>,
                             RTC::Delete<ROIExtractionTest>);
  }
  
};


